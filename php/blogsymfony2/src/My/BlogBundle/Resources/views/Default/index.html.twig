<h1>Blog posts</h1>
<table>
    <tr>
        <td>Id</td>
        <td>Title</td>
        <td>CreatedAt</td>
        <td>Operation</td>
    </tr>
    {% for post in posts %}
    <tr>
        <td>{{post.id}}</td>
        <td><a href="{{ path('blog_show', {'id':post.id})}}">{{post.title}}</a></td>
        <td>{{post.createdAt|date('Y/m/d H:i')}}</td>
        <td><a href="{{ path('blog_delete', {'id':post.id})}}">Delete</a></td>
    </tr>
    {% else %}
    <tr>
        <td colspan="4">No posts found</td>
    </tr>
    {% endfor %}
</table>

<div>
<a href="{{path('blog_new')}}">add post</a>
</div>