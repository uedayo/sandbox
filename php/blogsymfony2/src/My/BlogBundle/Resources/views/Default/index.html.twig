<h1>Blog posts</h1>
<table>
    <tr>
        <td>Id</td>
        <td>Title</td>
        <td>CreatedAt</td>
    </tr>
    {% for post in posts %}
    <tr>
        <td>{{post.id}}</td>
        <td><a href="{{ path('blog_show', {'id':post.id})}}">{{post.title}}</a></td>
        <td>{{post.createdAt|date()}}</td>
    </tr>
    {% else %}
    <tr>
        <td colspan="3">No posts found</td>
    </tr>
    {% endfor %}
</table>